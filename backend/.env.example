# Server Configuration
NODE_ENV=development
PORT=8000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017

# JWT Configuration
ACCESS_TOKEN_SECRET=your-super-secret-access-token-key-change-in-production
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-in-production
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Cookie Configuration
COOKIE_SECRET=your-cookie-signing-secret-change-in-production

# Cloudinary Configuration
CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# CORS Configuration (required for auth cookies when frontend and backend are on different domains)
# Development:
CORS_ORIGIN=http://localhost:5173
# Production: set to your frontend URL(s). Comma-separated for multiple. If unset, backend reflects request origin.
# CORS_ORIGIN=https://your-app.vercel.app

# Frontend URL used in password-reset emails (reset link)
FRONTEND_URL=http://localhost:5173

# Optional: Gmail SMTP for sending forgot-password reset emails. If both set, reset link is emailed; otherwise returned in API response.
# MAIL_ID=your-gmail@gmail.com
# MAIL_PASSWORD=your-gmail-app-password
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
